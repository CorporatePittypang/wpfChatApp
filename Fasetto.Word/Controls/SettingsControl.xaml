<UserControl x:Class="Fasetto.Word.SettingsControl"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:local="clr-namespace:Fasetto.Word"
						 mc:Ignorable="d" >
	<Border Background="{StaticResource ForegroundLightBrush}" 
					Padding="15">
		<Grid >

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- Settings Title -->
			<Grid Height="40" Margin="0 0 0 20">

				<!-- Back button -->
				<Button Style="{StaticResource IconGrowButton}"
							Content="{StaticResource FontAwesomeArrowLeftIcon}"
							FontFamily="{StaticResource FontAwesome}"
							FontSize="100"
							Foreground="{StaticResource ForegroundDarkBrush}"
							HorizontalAlignment="Left"
							Height="50"
						  VerticalAlignment="Center"
							Command="{Binding CloseCommand}"
							/>

				<!-- Settings header -->
				<TextBlock FontSize="{StaticResource FontSizeLarge}"
								 Foreground="{StaticResource ForegroundVeryDarkBrush}"
								 HorizontalAlignment="Center"
								 VerticalAlignment="Center"
								 >
				
				<!-- Cog icon -->
				<Run FontFamily="{StaticResource FontAwesome}"
						 Text="{StaticResource FontAwesomeCogIcon}"
						 Foreground="{StaticResource WordOrangeBrush}" 
						 />
				<!-- Settings text icon -->
				<Run Text="Settings"
						 FontFamily="{StaticResource LatoRegular}"
						 />

				</TextBlock>

			</Grid>

			<!-- Main Content -->
			<Grid Grid.Row="1"
						Width="700"
						VerticalAlignment="Top"
						>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="260"  />
					<ColumnDefinition Width="*"  />
				</Grid.ColumnDefinitions>

				<!-- Profile Picture -->
				<Grid Margin="0 0 10 0"
							Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
							>
					<!-- Mask for rounded corners -->
					<Border CornerRadius="8" 
									Name="Mask" 
									Background="White"
									/>

					<!-- Image -->
					<Grid>
						<Grid.OpacityMask>
							<VisualBrush Visual="{Binding ElementName=Mask}" />
						</Grid.OpacityMask>

						<Image Source="/Images/Samples/doggo.jpg" Stretch="UniformToFill" />
					</Grid>

				</Grid>

				<!--  Profile details -->
				<Grid Grid.Column="1"
							local:PanelChildMarginProperty.Value="15 5"
							>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<!-- Labels -->
					<TextBlock Text="Name"  FontFamily="{StaticResource LatoRegular}" Grid.Row="0"/>
					<TextBlock Text="Username" FontFamily="{StaticResource LatoRegular}" Grid.Row="1" />
					<TextBlock Text="Password" FontFamily="{StaticResource LatoRegular}" Grid.Row="2"/>
					<TextBlock Text="Email" FontFamily="{StaticResource LatoRegular}" Grid.Row="3"/>

					<!-- Content -->
					<TextBlock Text="Luke Malpass" Grid.Column="1" />
					<TextBlock Text="Luke" Grid.Column="1" Grid.Row="1"/>
					<TextBlock Text="********" Grid.Column="1" Grid.Row="2"/>
					<TextBlock Text="contact@anything.com" Grid.Column="1" Grid.Row="3"/>

				</Grid>

			</Grid>

		</Grid>
	</Border>
</UserControl>